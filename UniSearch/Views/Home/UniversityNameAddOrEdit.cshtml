@model Portal.Helper.UniversityName

@{
    ViewBag.Title = "UniversityNameAddOrEdit";
    Layout = null;
}



@using (Html.BeginForm("UniversityNameAddOrEdit", "Home", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);", data_restUrl = Url.Action("UniversityNameAddOrEdit", "Home", new { id = 0 }) }))//data-resetUrl
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.uni_pk)

            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.uni_name, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.uni_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.uni_name)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.country_pk, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.country_pk, new SelectList(Model.country_list, "country_pk", "country_name"), "Select Country", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.country_pk)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.completed, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.CheckBoxFor(model => model.iscompleted, new { @class = "" })
                        @Html.ValidationMessageFor(model => model.country_pk)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ranking, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ranking, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ranking)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.admission_open, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.CheckBoxFor(model => model.isadmission_open, new { @class = "" })
                        @Html.ValidationMessageFor(model => model.country_pk)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.admission_link, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.admission_link, new { htmlAttributes = new { @class = "form-control fullWidthTextBox" } })
                        @Html.ValidationMessageFor(model => model.admission_link)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" />

                    </div>
                </div>
            </div>


        </div>
    </div>
}

