@model Portal.Helper.StudyArea

@{
    ViewBag.Title = "StudyAreaAddOrEdit";
    Layout = null;
}



@using (Html.BeginForm("StudyAreaAddOrEdit", "Home", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);", data_restUrl = Url.Action("StudyAreaAddOrEdit", "Home", new { id=0}) }))//data-resetUrl
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.study_areas_pk)

            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.study_areas_name, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.study_areas_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.study_areas_name)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.subject_group_pk, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.subject_group_pk,new SelectList( Model.subject_group_list,"subject_group_pk","subject_group_name"), null, new { @class="form-control" })  
                        @Html.ValidationMessageFor(model => model.subject_group_pk)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" />

                    </div>
                </div>
            </div>
           
            
        </div>
    </div>
}

