
@{
    Layout = null;
}

<table class="table table-striped table-condensed" id="MainTbl">
    <thead>
        <tr>
            <th>
                degree_type_pk
            </th>
            <th>
                degree_type_name
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>

</table>
<link href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>

<script>
    var oTable = $('#MainTbl').dataTable({
        "serverSide": true,
        "processing": true,
        "ajax": "@Url.Action("GetAllDegreeType", "Home")",
        "method": "GET",
        "lengthMenu": [[25, 50, 100], [25, 50, 100]],
        "columns": [
            { "data": "degree_type_pk" },
            { "data": "degree_type_name" },
            {
                data: 'degree_type_pk',
                "render": function (data, type, row) {
                    var url = "'/Home/DegreeTypeAddOrEdit/"+data+"'";
                    return '<a class="btn btn-primary btn-sm" onclick="Edit('+url+')"><i class="fa fa-pencil fa-lg"></i></a>';
                }
            },
            {
                data: 'degree_type_pk',
                "render": function (data, type, row) {
                    var url = "'/Home/DegreeTypeDelete/"+data+"'";
                    return '<a class="btn btn-danger btn-sm" onclick="Delete('+url+')"><i class="fa fa-trash fa-lg"></i></a>';
                }
            }
        ],
    });
</script>  