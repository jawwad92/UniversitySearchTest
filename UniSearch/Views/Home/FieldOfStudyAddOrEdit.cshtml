@model Portal.Helper.FieldOfStudy

@{
    ViewBag.Title = "FieldOfStudyAddOrEdit";
    Layout = null;
}



@using (Html.BeginForm("FieldOfStudyAddOrEdit", "Home", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);", data_restUrl = Url.Action("FieldOfStudyAddOrEdit", "Home", new { id=0}) }))//data-resetUrl
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.field_of_study_pk)

            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.field_of_study_name, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.field_of_study_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.field_of_study_name)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.study_areas_pk, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.study_areas_pk,new SelectList( Model.study_areas_list,"study_areas_pk","study_areas_name"),  "Select Study Area", new { @class="form-control" })
                        @Html.ValidationMessageFor(model => model.study_areas_pk)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" />

                    </div>
                </div>
            </div>
           
            
        </div>
    </div>
}
